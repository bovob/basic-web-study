<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="false">
<!--metadata-complete = @애너테이션 사용여부-->

<!-- 리스너 등록 -->
<listener>
    <listener-class>com.servlet.Listener02</listener-class>
</listener>

<!-- 서블릿 등록 -->
<servlet>
    <servlet-name>second</servlet-name>
    <servlet-class>com.servlet.Servlet02</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>second</servlet-name>
    <url-pattern>/ex01/second</url-pattern>
</servlet-mapping>

<!-- 필터 등록 -->
<filter>
    <filter-name>filter2</filter-name>
    <filter-class>com.servlet.Filter02</filter-class>
</filter>

<!-- 필터를 적용할 URL 설정 -->
<filter-mapping>
    <filter-name>filter2</filter-name>
    <url-pattern>/ex01/test/*</url-pattern>
</filter-mapping>

</web-app>